<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="projet_java.package1.controllers.PasserQuestionnaireController" 
      alignment="CENTER" spacing="20">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>
    
    <Label text="Questionnaire" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
    <Label fx:id="lblEnnonce" wrapText="true" style="-fx-font-size: 16px;"/>
    <VBox fx:id="boxChoix" spacing="10" alignment="CENTER_LEFT"/>
    
    <HBox spacing="20" alignment="CENTER">
        <Button text="Précédent" onAction="#precedent"/>
        <Button text="Suivant" onAction="#suivant"/>
        <Button text="Terminer" onAction="#terminer" style="-fx-background-color: #ff4444; -fx-text-fill: white;"/>
    </HBox>
      <Button text="Retour Au Menu" fx:id="btnMigration"
        prefWidth="250" onAction="#btnRetourClicked"/>
</VBox>