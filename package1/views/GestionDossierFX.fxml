<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="projet_java.package1.controllers.GestionDossierController">

    <top>
        <Label text="Gestion des Dossiers Migration"
               style="-fx-font-size:18px; -fx-font-weight:bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <TableView fx:id="tableDossiers" prefHeight="300">
            <columns>
                <TableColumn fx:id="colNum" text="Numéro" prefWidth="80"/>
                <TableColumn fx:id="colDateDepot" text="Date Dépot" prefWidth="120"/>
                <TableColumn fx:id="colDateTraitement" text="Date Traitement" prefWidth="120"/>
                <TableColumn fx:id="colProfessionnel" text="Professionnel" prefWidth="200"/>
                <TableColumn fx:id="colResultat" text="Résultat" prefWidth="80"/>
            </columns>
        </TableView>
    </center>

    <bottom>
        <VBox spacing="10">
            <padding>
        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
    </padding>
            <Label text="Ajouter un Dossier Migration" style="-fx-font-size:14px; -fx-font-weight:bold;"/>
            
           <GridPane hgap="10" vgap="10">
    <Label text="Numéro Dossier:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="txtNumDossier" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Date Dépot:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dpDateDepot" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Date Traitement:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <DatePicker fx:id="dpDateTraitement" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Professionnel:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="cbProfessionnel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Résultat:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <CheckBox fx:id="chkResultat" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
</GridPane>


            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Ajouter" fx:id="btnAjouter"/>
                <Button text="Supprimer" fx:id="btnSupprimer"/>
                <Button text="Actualiser" fx:id="btnActualiser"/>
            </HBox>
                 <Button text="Retour Au Menu" fx:id="btnMigration"
        prefWidth="250" onAction="#btnRetourClicked"/>
        </VBox>
    </bottom>
 
</BorderPane>
